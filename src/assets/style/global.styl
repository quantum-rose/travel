html {
  font-size: 50px;
  height: 3000px;
}

body {
  font-size: 0.28rem;
}

* {
  margin: 0;
  padding: 0;
}

a {
  color: #222;
  text-decoration: none;
  -webkit-tap-highlight-color: transparent;
  -webkit-user-select: none;
  -moz-user-focus: none;
  -moz-user-select: none;
}

input {
  outline: none;
  border: none;
}

ul {
  list-style: none;
}